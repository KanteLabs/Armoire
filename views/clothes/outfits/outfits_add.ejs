<% include ../../partials/boilerplate %>


<h1 class="pageHeader">
    Create an Outfit
</h1>

<form method="post" action="add" class="edit_info"> 
    <input name="name" type="text" placeholder="Outfit Name" required="required" />
    <input name="clout_points" type="number" placeholder="Clout Points" required="required" />
        <% for(let i = 0; i < data.length; i++){ %>
            <% if(data[i].clothing_type === 'Tees'){ %>
            <h1 class="subHeader">Top</h1>
                <div class="outfitChoice">
                    <p><%= data[i].name %></p>
                    <input name="top_id" class="styledInput" required="required" type="radio" value="<%= data[i].id %>">
                </div>
            <% } else if (data[i].clothing_type === 'pants') {%>
                <h1 class="subHeader">Bottom</h1>
                <div class="outfitChoice">
                <p><%= data[i].name %> </p>
                <input name="bottom_id" class="styledInput" required="required" type="radio" value="<%= data[i].id %>">
                </div>
            <% } else if (data[i].clothing_type === 'Sneakers') {%>
                <h1 class="subHeader">Shoe</h1>
                <div class="outfitChoice">
                <p><%= data[i].name %> </p>
                <input name="shoe_id" class="styledInput" required="required" type="radio" value="<%= data[i].id %>">
                </div>
            <% } %>
        <% } %>
        <input type="submit" value="Swool" class="edit"/>
</form>

<% include ../../partials/end %>