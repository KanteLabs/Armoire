<% include ../../partials/boilerplate %>

    <h1 style="margin-top: 5em"> <%= username %> outfits </h1>

    <% for(let i = 0; i <(data.length)/3; i++) { %>
        <p><%= data[i].outfitname %> outfit has <span class="badge"><%= data[i].clout_points %></span> clout points</p>
        <a href="/clothes/outfits/<%= data[i].outfitid %>">View <%= data[i].outfitname %> </a>
        <a href='/clothes/outfits/<%= data[0].outfitid%>/edit'>Edit it!</a>
        <form method='POST' action='/clothes/outfits/<%= data[i].outfitid %>?_method=DELETE'>
            <input type='submit' value='Delete Outfit' />
        </form>
    <% } %>

<% include ../../partials/end %>