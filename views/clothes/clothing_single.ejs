<% include ../partials/boilerplate %>

<h1 class="pageHeader"><%= data.name %> </h1>
<div class="clothes_single">
    <p> <%= data.brand %> </p>
    <p class="description"> <%= data.description %> </p>
    <p> Price: <%= data.price %> </p>
    <p> Product ID: <%= data.productid %> </p>
    <img src="<%= data.imagebest %>" />
    <a class="edit" href='/clothes/<%= data.id %>/edit'>Edit it!</a>
    <form method='POST' action='/clothes/<%= data.id %>?_method=DELETE'>
        <input type='submit' value='Delete Item' />
    </form>
</div>

<% include ../partials/end %>